            android:name="gr.siokas.plain.app.AboutPlain"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_about_plain"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="gr.siokas.plain.app.AboutUs" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="gr.siokas.plain.app.WrongDecision"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_wrong_decision"
            android:screenOrientation="landscape" />
    </application>

</manifest>