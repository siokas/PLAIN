                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="gr.siokas.plain.app.Game"
            android:configChanges="orientation|keyboardHidden"
