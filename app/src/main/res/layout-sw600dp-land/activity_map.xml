<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="gr.siokas.plain.app.Map"
    android:background="@drawable/xartis">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/key"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/koumpi_kleidi" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kastra_bt"
        android:background="@drawable/button"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/rotonda_bt"
        android:layout_marginLeft="106dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dimitrios_bt"
        android:background="@drawable/button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/lefkos_bt"
        android:layout_marginRight="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rotonda_bt"
        android:background="@drawable/button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/alex_bt"
        android:layout_alignStart="@+id/alex_bt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lefkos_bt"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/alex_bt"
        android:layout_marginRight="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alex_bt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zoo_bt"
        android:background="@drawable/button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>
